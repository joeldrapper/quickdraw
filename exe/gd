#!/usr/bin/env ruby
# frozen_string_literal: true

require "concurrent"

require_relative "../lib/green_dots"

directory = ARGV[0] || "test"

$LOAD_PATH.unshift File.expand_path("#{directory}/support")

require "helper"

# Dir.glob("#{directory}/support/**/*.rb").each { |f| eval File.read(f), binding, f, 1 }

run = GreenDots::Run.new

Dir.glob("#{directory}/**/*.rb").reject { |f| f.start_with? "#{directory}/support/" }.shuffle.each do |f|
	Class.new(GreenDots::Context) do
		class_eval(
			File.read(f), f, 1
		)
	end.run(run)
end

SUCCESS_EMOJI = %w[ğŸ’ƒ ğŸ•º ğŸ‰ ğŸŠ ğŸ’ª ğŸ‘ ğŸ™Œ âœ¨ ğŸ¥³ ğŸˆ]

puts "\n\n"
puts "#{run.successes} expectations passed. #{SUCCESS_EMOJI.sample}"
